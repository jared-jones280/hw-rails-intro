<h2>All Movies</h2>

<%#  Part 2: Start here... %>

<table class="table table-striped col-md-12" id="movies">
  <thead>
    <tr>
      <th><a id = title_header href = './?sort_by=title'>Movie Title</a></th>   <!--<%= link_to "Movie Title" , :sort_by => :title %> -->
      <th>Rating</th>
      <th><a id = release_date_header href = './?sort_by=release_date'>Release Date</a></th>              <!--<%= link_to "Release Date", :sort_by => :release_date %> -->
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %> <!-- add .order(:title)(:release_date) /.reverse() -->
      <tr>
        <td>
          <%= movie.title %>
        </td>
        <td>
          <%= movie.rating %>
        </td>
        <td>
          <%= movie.release_date %>
        </td>
        <td>
          <%= link_to "More about #{movie.title}", movie_path(movie) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Add new movie', new_movie_path, :class => 'btn btn-primary' %>

